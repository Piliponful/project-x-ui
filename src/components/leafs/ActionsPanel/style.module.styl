.container {
  margin-top: 10px;
  width: 100%;
  height: 35px;
  background: #2b2b2b;
  padding: 30px 20px;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  flex-shrink: 0;
  border-radius: 4px;
  justify-content: space-between;
  cursor: pointer;
  text-decoration: none;
  // box-shadow: 0 3px 3.84px 2.16px #0c0c0c2b;
  position: relative;
}

.dropdown {
  position: absolute;
  left: 0;
  width: 100%;
  background: #2b2b2b;
  flex-direction: column;
  gap: 18px;
  padding: 21px 18px;
  box-sizing: border-box;
  color: #bebebe;
  font-family: 'IBM Plex Sans';
  bottom: calc(100% + 6px);
  border-radius: 4px;
  border: 1px solid #ffffff26;
  // box-shadow: 0 3px 3.84px 2.16px #0c0c0c2b;
}

.icon {
  cursor: pointer;
}

.username {
  color: #bebebe;
  margin-right: 5px;
}

.twitterSignIn {
  display: flex;
  align-items: center;
  justify-content: center;

  svg {
    color: #bebebe;
  }
}

.divider {
    color: #bebebe;
    border-top: 1px solid #ffffff26;
    font-weight: 500;
    font-size: 18px;
    display: flex;
    justify-content: center;
    padding-top: 12px;
}