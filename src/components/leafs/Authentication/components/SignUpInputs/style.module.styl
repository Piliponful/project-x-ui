.input {
  box-sizing: border-box;
  border: none;
  outline: none;

  caret-color: #626161;
  color: #626161;
  width: 85%;
  height: 44px;
  border-radius: 5px;
  background: #f7f7f7;
  margin-bottom: 14px;
  box-shadow: 0px 2px 4.75px 0.25px rgba(0, 0, 0, 0.11);
  padding-left: 21px;

  &:first-of-type {
    margin-top: 28px;
  }

  &:placeholder {
    font-weight: 300;
    font-size: 18px;
    color: #969696;
  }
  &Error {
    animation: shake 0.2s ease-in-out 0s 2;
    box-shadow: 0px 2px 8.75px 0 rgb(192, 0, 0)
  }

  &:disabled {
    background: #d5d5d5;
    color: #969696;
  }
}

.disabled {
  background: #d5d5d5;
  color: #969696;
  input {
    background: #d5d5d5;
  }
}

.button {
  height: 44px;
  padding: 0 20px;
  border-radius: 5px;
  background: #000 linear-gradient(90deg, rgba(172,203,238,0.39), rgba(231,240,253,0.39));
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 500;
  font-size: 20px;
  color: #ebedf2;
  margin-top: 28px;
  margin-bottom: 17px;
}

.withoutMargin {
  margin-bottom: 0;
}

@keyframes shake {
  0% { margin-left: 0rem; }
  25% { margin-left: 0.5rem; }
  75% { margin-left: -0.5rem; }
  100% { margin-left: 0rem; }
}
