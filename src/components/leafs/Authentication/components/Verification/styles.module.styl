.button {
  height: 44px;
  padding: 0 20px;
  border-radius: 5px;
  background: #000 linear-gradient(90deg, rgba(172,203,238,0.39), rgba(231,240,253,0.39));
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 500;
  font-size: 20px;
  color: #ebedf2;
}

.verificationCodeContainer {
  display: flex;
  justify-content: space-between;
  width: 85%;
}

.input {
  box-sizing: border-box;
  border: none;
  outline: none;

  caret-color: #626161;
  color: #626161;
  width: 60%;
  height: 44px;
  border-radius: 5px;
  background: #f7f7f7;
  box-shadow: 0px 2px 4.75px 0.25px rgba(0, 0, 0, 0.11);
  padding-left: 21px;

  &:placeholder {
    font-weight: 300;
    font-size: 18px;
    color: #969696;
  }
}
