.screenWithGroupContent {
  width: 500px;
  background: white;
  border-radius: 4;
  box-shadow: 0px 3px 3.84px 2.16px rgba(12, 12, 12, 0.17);
  display: flex;
  flex-direction: column;
  font-family: 'IBM Plex Sans';
}

.screenWithGroupContent > p {
  padding: 30px 15px;
}

@media only screen and (max-width: 1129px) {
  .screenWithGroupContent {
    display: none;
  }
}