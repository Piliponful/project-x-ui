.totalAndBack {
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
}

.total {
  color: white;
  font-size: 18px;
  font-family: 'IBM Plex Sans';
}

.back {
  color: #f4f3fd;
  cursor: pointer;
  margin-bottom: 14px;
  background: #1c1c1c;
  border-radius: 4px;
  padding: 3px;
  position: relative;
}

.screenWithGroupContent {
  background: white;
  border-radius: 4;
  box-shadow: 0px 3px 3.84px 2.16px rgba(12, 12, 12, 0.17);
  display: flex;
  flex-direction: column;
  font-family: 'IBM Plex Sans';
  max-width: 500px;
  width: calc(100% - 20px);
  background: #2b2b2b;
  padding-top: 10px;
  gap: 8px;
  overflow: scroll;
  height: calc(100dvh - 40px);
  padding: 10px 20px;
  box-sizing: border-box;
  margin: 20px 0;
}
