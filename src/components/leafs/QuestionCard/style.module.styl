.card {
  border-radius: 4px;
  // box-shadow: 0px 3px 3.84px 2.16px rgba(12, 12, 12, 0.17);
  background: #f4f3fd;
  width: 100%;
  min-height: 180px;
  margin-bottom: 10px;
  padding: 15px 15px 10px;
  box-sizing: border-box;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  &:last-of-type {
    margin-bottom: 0;
  }
}

.hint {
  font-size: 16px;
  color: #969696;
  font-weight: 300;
}
