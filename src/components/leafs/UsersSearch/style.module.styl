.back {
  color: white;
  cursor: pointer;
  margin-bottom: 24px;
}

.totalAndBack {
  display: flex;
  justify-content: space-between;
}

.total {
  color: white;
  font-size: 18px;
  font-family: 'IBM Plex Sans';
}

.usersContainer {
  background: white;
  border-radius: 4;
  box-shadow: 0px 3px 3.84px 2.16px rgba(12, 12, 12, 0.17);
  display: flex;
  flex-direction: column;
  font-family: 'IBM Plex Sans';
  max-width: 350px;
  width: calc(100% - 20px);
  background: #2b2b2b;
  padding-top: 10px;
  gap: 8px;
  background: #00000030;
  border: 1px dashed #3eb5f175;
}

.usersContainer > p {
  padding: 30px 15px;
  color: #bebebe;
}

@media only screen and (max-width: 1129px) {
  .usersContainer {
    display: none;
  }
}

.userItem {
  display: flex;
  justify-content: space-between;
  gap: 12px;
  padding: 15px;
  color: #bebebe;
  background-color: #2b2b2b;
  border-radius: 4px;
  // box-shadow: 0 0px 6.84px 3.16px #0c0c0c38;
  // margin: 0 10px;
  font-family: 'IBM Plex Sans';
  cursor: pointer;

  img {
    border-radius: 50%;
    height: 50px;
  }

  svg {
    color: #bebebe;
  }

  a {
    background-color: black;
    border-radius: 4px;
    border: 1px solid #3eb5f175;
    height: 38px;
    width: 38px;
    cursor: pointer;
    padding: 6px;
    transition: box-shadow .2s;
    box-sizing: border-box;

    &:hover {
      box-shadow: 0 3px 9.84px -0.84px #3eb5f12e;
    }
  }
}

.column {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.row {
  display: flex;
  gap: 8px;
}