.body {
  display: flex;
  justify-content: center;
  width: 100vw;
  background: #000 linear-gradient(90deg, #accbee63, #49333e);
  max-height: 100dvh;
  min-height: 100dvh;
}

.close {
  width: 100%;
  display: flex;
  justify-content: space-between;

  h2 {
    margin: 0;
    margin-bottom: 20px;
  }

  svg {
    cursor: pointer;
  }
}

.address {
  overflow: hidden;
  max-width: 390px;
  display: block;
  text-overflow: ellipsis;
}

.row {
  display: flex;
  gap: 8px;

  b {
    white-space: nowrap;
  }
}

.amount {
  text-overflow: ellipsis;
  max-width: 180px;
  display: block;
  overflow: hidden;
}