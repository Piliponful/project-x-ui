.textarea {
  width: 100%;
  height: 144px;
  border-radius: 4px;
  background: #2b2b2b;
  border: none;
  resize: none;
  padding: 10px 15px;
  box-sizing: border-box;
  outline: none;
  caret-color: #969696;

  font-family: 'IBM Plex Sans', sans-serif;
  font-size: 18px;
  font-weight: 300;
  color: #bebebe;
}
